<script>
    function getPropiedadE (){
        let content = "";
        fetch("/propiedad/getPropiedades", {
            method: 'GET'
        }).then((response) => {
            response.json().then((res) => {
                res.data.forEach(item => {
                    content = `<option>$1</option>`;
                    content = content.replace("$1", item.titulo + ", " +item.pais + ", " + item.precio + " "+item.moneda);
                    $('#PopiedadesEliminar').append(content);
                })
            })
        })  
    }
    
    function getPropiedadM(){
        let content = "";
        var a =[];
        var obja = new Object();
        fetch("/propiedad/getPropiedadesAdmin", {
            method: 'GET'
        }).then((response) => {
            response.json().then((res) => {
                res.data.forEach(item => {                   
                    content = `<option>$1</option>`;
                    content = content.replace("$1", item.titulo + ", " +item.pais + ", " + item.precio + " "+item.moneda);
                    $('#PopiedadesModificar').append(content);  
                    a.push(item.id);              

                })               
            })         
        })   
    }
    function eliminarPropiedad(){
        let Pid = document.getElementById("Pid").innerHTML;
        console.log(Pid);
        fetch("/propiedad/delPropiedad", {
            method: 'DELETE',
            headers: { "Content-type" : "application/json; charset=UTF-8"},
            body: JSON.stringify({
                id: Pid,
            })
        }).then(function(response) {
            response.json().then(function(res){
                location.reload();
            });
        })        
    }


    function modificarPropiedad(statusFinal){
        let Pid = document.getElementById("Pid").innerHTML;

        fetch("/propiedad/modPropiedad", {
            method: 'PUT',
            headers: { "Content-type" : "application/json; charset=UTF-8"},
            body: JSON.stringify({
                id: Pid,
                status: statusFinal
            })
        }).then(function(response) {
            response.json().then(function(res){
                location.reload();
            });
        })        
        
    }
    function validarStatus(){
        document.getElementById("propiedadStatus").disabled = false;     
    }

    function getPropiedadesId( id ){
        let content = "";
        fetch("/propiedad/getPropiedadesById?id="+id , {
            method: 'GET'
        }).then((response) => {
            response.json().then((res) => {
                document.getElementById("PropiedadTitle").innerHTML = res.data[0].titulo;
                document.getElementById("Pciudad").innerHTML = res.data[0].ciudad;
                document.getElementById("Pubicacione").innerHTML = res.data[0].ubicacion;
                document.getElementById("Pmoneda").innerHTML = res.data[0].moneda; 
                document.getElementById("Ppais").innerHTML = res.data[0].pais;
                document.getElementById("Phabitaciones").innerHTML = res.data[0].habitaciones;
                document.getElementById("Pprecioe").innerHTML = res.data[0].precio;
                document.getElementById("Pbanos").innerHTML = res.data[0].bano;
                document.getElementById("Parea").innerHTML = res.data[0].area + " m¬≤";
                document.getElementById("Ptipo").innerHTML = res.data[0].tipo;
                document.getElementById("Pstatus").innerHTML = res.data[0].status;
                document.getElementById("Pid").innerHTML = res.data[0].id;
                document.getElementById("Pimagen").src = res.data[0].url_imagen;
            })
        })  
    }
    function NuevaPropiedad(){
        let titulo = document.getElementById("PAnombre").value;
        let pais = document.getElementById("PApais").value;
        let ciudad = document.getElementById("PAciudad").value;
        let ubicacion = document.getElementById("PAubicacion").value;
        let tipo = document.getElementById("PAtipo").value;
        let area = document.getElementById("PAarea").value;
        let bano = document.getElementById("PAbano").value;
        let habitacion = document.getElementById("PAhabitacion").value;
        let precio = document.getElementById("PAprecio").value;
        let moneda = document.getElementById("PAmoneda").value;
        let imagen = document.getElementById("PAimagen").value;
        let status = document.getElementById("PAstatus").value;

        
        //f(titulo =="" || pais =="" || ciudad =="" || ubicacion =="" || tipo =="" || area =="" ||  bano =="" || titulo =="" ||  )

        fetch("/propiedad/newPropiedad", {
            method: 'POST',
            headers: { "Content-type" : "application/json; charset=UTF-8"},
            body: JSON.stringify({
                titulo: titulo,
                pais: pais,
                ciudad: ciudad,
                ubicacion: ubicacion,
                tipo: tipo,
                area: area,
                bano: bano,
                habitaciones: habitacion,
                precio: precio,
                moneda: moneda,
                url_imagen: imagen,
                status: status
            })
        }).then(function(response) {
            response.json().then(function(res){
            });
        })        
    }

